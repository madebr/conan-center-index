 $(stlib): $(shlib)
@@ -354,8 +356,8 @@ else
 # Win32 case
 
 # See notes in src/backend/parser/Makefile about the following two rules
-$(stlib): $(shlib)
-	touch $@
+$(stlib): $(OBJS)
+	$(AR) $(AROPT) $@ $(filter-out libpqrc.o,$(OBJS))
 
