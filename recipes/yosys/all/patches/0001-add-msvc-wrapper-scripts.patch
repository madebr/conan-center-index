+            ldopts+=("`echo "$1.lib" | sed "s/^-l//"`")
+            ;;
+        -LIBPATH*)
+            libpath="`echo "$1" | sed -E "s/^-LIBPATH:?//"`"
+            winlibpath="`cygpath -w "$libpath"`"
+            ldopts+=("-LIBPATH:$winlibpath")
+            ;;
+        -L*)
+            ldopts+=("`echo "$1" | sed "s/^-L/-LIBPATH:/"`")
+            ;;
