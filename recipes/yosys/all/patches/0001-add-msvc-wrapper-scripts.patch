+            done
+            ;;
+        *.lib)
+            ldopts+=("$1")
+            ;;
+        -o)
+            shift
+            case "$1" in
+                *.so | *.dll)
+                    libname_stem=`echo "$1" | sed -E "s/.((so)|(dll))$//"`
+                    ldopts+=(-dll "-out:$libname_stem.dll" "-implib:$libname_stem.lib")
+                    ;;
+                *)
+                    ldopts+=("-out:$1")
+                    ;;
+            esac
+            ;;
+        -shared)
+            ;;
+        -rdynamic)
+            ;;
+        *)
+            clopts+=("$1")
+            ldopts+=("$1")
+            ;;
+    esac
+    shift
+done
+
+args="${ldopts[@]}"
+
+cat <<-EOF
+    Creating program
+    ** ld options:   "$args"
+EOF
+
+exec link -nologo -debug:full $args
